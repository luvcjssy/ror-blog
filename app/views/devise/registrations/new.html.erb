<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <%= f.input :email, :input_html => {:class => 'form-control', :autofocus => true } %>
    <%= f.input :password, :input_html => {:class => 'form-control'} %>
    <%= f.input :password_confirmation, :input_html => {:class => 'form-control'} %>
    <br/>
    <%= f.submit 'Sign up', :class => 'button right' %>

    <%= render "devise/shared/links" %>

  <% end %>
</div>